# Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection (USE YOUR MONGODB ATLAS CONNECTION STRING)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/resume-system?retryWrites=true&w=majority

# JWT Secret (Change this to a secure random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=5000

# OpenAI API Key (Optional - will use fallback algorithm if not provided)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Frontend URL (Update this with your Vercel deployment URL)
FRONTEND_URL=https://your-app.vercel.app

# Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/resume-system
# For MongoDB Atlas, use: mongodb+srv://<username>:<password>@cluster.mongodb.net/resume-system

# JWT Secret (Change this to a secure random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Port
PORT=5000

# OpenAI API Key (Optional - will use fallback algorithm if not provided)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
